<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="100dp" android:id="@+id/row_image" android:layout_marginBottom="7dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/row_name" android:layout_marginBottom="7dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/row_title" android:lines="2" android:maxLines="2" android:layout_marginBottom="7dp"/>
        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/row_content" android:lines="4" android:maxLines="4" android:layout_marginBottom="7dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="7dp" >
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/row_like"/>
            <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/row_comment" android:paddingLeft="20dp"/>
        </LinearLayout>


        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/row_tags" android:layout_marginBottom="7dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/price_tags"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/row_tool" android:layout_marginBottom="7dp">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imglike" android:layout_marginRight="10dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imgfollow" android:layout_marginRight="10dp"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imgedit" android:layout_marginRight="10dp" android:src="@drawable/eyedropper"/>
        </LinearLayout>
    </LinearLayout>


    <TextView android:layout_gravity="right" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/row_time"/>
</LinearLayout>